@page "/products"
@attribute [Authorize]
@inject ProductHttpClient Http

<h1>Products</h1>

@if (products == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Stock</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in products)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.ProductCategory?.Name</td>
                    <td>@(product.StockQty-product.HoldQty)</td>
                    <td><button class="btn btn-primary">Add to Card</button></td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private IEnumerable<ProductViewModel> products;

    protected override async Task OnInitializedAsync()
    {
        products = await Http.GetProductsAsync();
    }
}
